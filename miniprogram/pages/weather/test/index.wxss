
page{
  color: #fff;
}

.tui-header-box {
  width: 100%;
  /* background: #fff; */
  position: fixed;
  z-index: 99998;
  left: 0;
  top: 0;
}
.lii{
  height:460rpx;
}
/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.tui-back {
  margin-left: 8rpx;
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}

.tui-searchbox {
  width: 100%;
  height: 30px;  
  border-radius: 15px;
  font-size: 12px;
  background: #f7f7f7;
  padding: 3px 10px;
  box-sizing: border-box;
  overflow: hidden;
}
/* 背景图 */
.bcg {
  position: fixed;  
  height: 100%;
  width: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  /* background: #40a7e7; */
  /* background: linear-gradient(to bottom, #73C6F1, #50B5EC); */
}
.content {
  position: relative;
  z-index: 2;
}

/* 切换背景 */
.chooseBcg {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  position: fixed;
  z-index: 100;
  width: 100%;
  font-size: 24rpx;
  color: #333;
}
.chooseBcg .top {
  box-sizing: border-box;
  padding: 20rpx 20rpx 50rpx;
  background: rgba(255, 255, 255, 0);
}
.chooseBcg .bcgs {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  overflow: scroll;
}
.chooseBcg .border {
  padding: 6rpx;
  margin-right: 14rpx;
  border: 1rpx solid rgba(255, 255, 255, 0);
  transition: .1s ease;
}
.chooseBcg .border:last-child {
  margin-right: 0;
}
.chooseBcg .border.active {
  border: 1rpx solid #40a7e7;
  transition: .1s ease;
}
.chooseBcg .bcgs image {
  width: 110rpx;
  height: 190rpx;
}
.chooseBcg .close {
  flex: 1;
  background: rgba(0, 0, 0, 0);
  padding: 20rpx 0;
  text-align: center;
}
.chooseBcg .close image {
  width: 64rpx;
  height: 64rpx;
}
.temp {
  height: 360rpx;
  font-size: 200rpx;
  position: relative;
}
.num {
  font-weight: 300;
}
 .pm{
  font-size: 24rpx;
  height: 2em;
  line-height: 1em;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(240, 240, 240, .4);
}
.guide{
  width: 100%;
  background: rgba(0, 0, 0, .4);
}
.title{
  border-bottom: 1rpx solid rgba(250, 250, 250, .2);
}
.guides{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 24rpx;
  padding-top: 20rpx;
  /* background: rgba(0, 0, 0, .6); */
  margin-bottom: 20rpx;
  overflow-x: scroll;
}
.item {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 170rpx;
  flex-shrink: 0;
}

 .detail,
.hour .detail {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx 0;
  height: 100rpx;
  width: 33.3%;
  border-right: 1rpx solid rgba(250, 250, 250, 0.2);
  border-bottom: 1rpx solid rgba(250, 250, 250, 0.2);
  box-sizing: border-box;
}
 .detail:nth-child(3n),
.hour .detail:nth-child(3n) {
